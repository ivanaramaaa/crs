<% provide(:title, 'Add Conference') %>
<h1>Add a conference</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@conference) do |f| %>
		<% if @conference.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@conference.errors.count, "error") %> prohibited
				this conference from being saved:
			</h2>
			<ul>
				<% @conference.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :start_date %>
		<%= f.date_field :start_date %>
		<%= f.label :end_date %>
		<%= f.date_field :end_date %>
		<%= f.label :fee %>
		<%= f.number_field :fee, min: 0, step: 'any' %>
		<%= f.label :paper_fee %>
		<%= f.number_field :paper_fee, min: 0, step: 'any' %>
		<%= f.submit "Add", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>