<% provide(:title, 'Edit Conference') %>
<h1>Edit this conference</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for :conference, url: conference_path(@conference), method: :patch do |f| %>
		<% if @conference.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@conference.errors.count, "error") %> prohibited
				this conference from being saved:
			</h2>
			<ul>
				<% @conference.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :start_date %>
		<%= f.date_field :start_date %>
		<%= f.label :end_date %>
		<%= f.date_field :end_date %>
		<%= f.label :fee %>
		<%= f.number_field :fee, min: 0, step: 'any' %>
		<%= f.submit "Update", class: "btn btn-primary" %>
		<% end %>
		<p class="text-center"><%= link_to 'Go back to view all', conferences_path %></p>
	</div>
</div>
