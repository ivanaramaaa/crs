<% provide(:title, 'View All Conferences') %>
<h1>All conferences</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<table class="table table-bordered table-striped">
			<tr>
				<th>Conference Name</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Conference Fee</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
			<% @conferences.each do |conference| %>
			<tr>
				<td><%= conference.name %></td>
				<td><%= conference.start_date %></td>
				<td><%= conference.end_date %></td>
				<td><%= conference.fee %></td>
				<td><%= link_to 'Edit', edit_conference_path(conference) %></td>
				<td><%= link_to 'Delete', conference_path(conference),
				        method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</table>
		<p class="text-center"><%= link_to 'Add more conferences', new_conference_path %></p>
	</div>
</div>