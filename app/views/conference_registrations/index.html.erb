<% provide(:title, "View Registrations") %>
<h1>Your conference registrations</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <% if !@user_registrations.empty? %>
  <table class="table table-bordered table-striped">
			<tr>
				<th>Name</th>
				<th>Conference</th>
				<th>Diet</th>
				<th>Total</th>
			</tr>
			<% @user_registrations.each do |reg| %>
			<tr>
				<td><%= reg.name %></td>
				<td><%= Conference.find_by(id: reg.conference_id).name %></td>
				
				<td><%= reg.diet %></td>
				<td><%= number_to_currency(Receipt.find_by(conference_registration_id: reg.id).total) %></td>
			</tr>
			<% end %>
		</table>
		<% else %>
      <h2>It looks like you haven't registered for any conferences...yet!</h2>
		  <p class="text-center"><%= link_to "Submit a new conference registration", select_conference_path %></p>
		<% end %>
  </div>
</div>