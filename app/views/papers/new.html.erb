<% provide(:title, 'Add Paper') %>
<h1>Add a paper</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<%= form_for([@user, @paper], :url => user_papers_path, :html => { :multipart => true }) do |paper| %>
		<%= paper.label :title %>
		<%= paper.text_field :title %>
		<%= paper.label "Author(s)" %>
		<%= paper.text_field :authors %>
		<%= paper.label "Attachment (must be in PDF form)" %>
		<%= paper.file_field :attachment %>
		<%= paper.submit "Add", class: "btn btn-primary" %>
		<% end %>
		<br>
		<p class="text-center"><%= link_to 'Return to your dashboard', user_path(@user) %></p>
	</div>
</div>